  coffee:
    $().ready ->
      # activate selectize.js plugin
      select = $('select').selectize(sortField: 'text')

      # activate markdown preview
      bind_input = (input, preview) ->
        [input, preview] = [input, preview].map (x) -> $(x)[0]
        update = ->
          preview.innerHTML = input.value
        input.oninput = update
        update()
      bind_input '[name="article[title]"]',        '.title-preview'
      bind_input '[name="article[subtitle]"]',  '.subtitle-preview'
      bind_input = (origin, begin_date, preview) ->
        origin = $(origin).next().find('input')[0]
        [begin_date, preview] = [begin_date, preview].map (x) -> $(x)[0]
        update = ->
          preview.innerHTML = markdown.toHTML(
            [$(origin).prev().text(),
             moment(begin_date.value, 'YYYY-MM-DD').format('l')].join(' '))
        select.on('change', update)
        @Datepicker.addUpdateEvent(update)
        update()
      bind_input('[name="article[origin_id]"]',
                 '[name="article[begin_date]"]', '.stamp-preview')

      # generate example preview of the tutorial
      gen_ouput = (static_input, preview) ->
        $(preview)[0].innerHTML = markdown.toHTML($(static_input).text())
      gen_ouput     '.title-example',     '.title-example-preview'
      gen_ouput '.paragraph-example', '.paragraph-example-preview'
      gen_ouput      '.list-example',      '.list-example-preview'
      gen_ouput '.quotation-example', '.quotation-example-preview'

      # activate codemirror
      text = $('textarea')[0]
      editor = CodeMirror.fromTextArea(text, {
        mode: 'markdown', lineWrapping: true, theme: "default",
        extraKeys: {'Enter': 'newlineAndIndentContinueMarkdownList'}
      })
      editor.on 'focus', ->
        $(text).next().addClass('CodeMirror-focus')
      editor.on 'blur', ->
        $(text).next().removeClass('CodeMirror-focus')
      update = ->
        preview = $('.preview')[0]
        preview.innerHTML = markdown.toHTML(editor.getValue())
      editor.on 'change', update
      update()

      # when user click example button, fill up textarea with body example
      $('.btn.body-example').on 'click', ->
        editor.setValue($(this).children('.hidden').text())
        editor.refresh()
