    .col-md-6.col-md-offset-3
      .panel.panel-default.panel-bright
        .panel-heading
          .panel-title
            h4
              = title
              .pull-right
                = link_to '返回', articles_path, class: 'btn btn-default btn-sm'
        .panel-body
          p
            | 可選擇發表的是專欄、重大事件還是報導。
          = f.association :provider, collection: providers.map(&:author),
            label_method: :name, value_method: :id,
            hint: '主要跟此篇文章有關的學者'
          = f.association :origin, collection: origins.map(&:author),
            label_method: :name, value_method: :id,
            hint: '來源是哪間報社'
          = f.daterange '時間', :begin_date, '至', :end_date
          = f.radio_buttons :tag, tags.map { |t| [t.name, t.id] },
            checked: (article.tag_id or tags[0].try(:id))
          = f.input :title, hint: '範例：「反軍人干政，張國龍等六人加入絕食」'
          = f.input :subtitle, input_html: {rows: '25'},
            hint: '範例：「群賢樓前昨有三十餘人靜坐」'
